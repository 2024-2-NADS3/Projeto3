<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/edittext_arredondado"
    android:paddingHorizontal="8dp"
    android:elevation="4dp"
    android:gravity="center"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="10dp">

    <!-- Ícone do benefício -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:gravity="center">

        <ImageView
            android:id="@+id/registro_icon_beneficio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_info"
            android:scaleType="fitCenter"
            android:maxHeight="85dp"
            android:maxWidth="85dp"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Descrição do benefício -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:padding="10dp">

        <!-- Nome do benefício -->
        <TextView
            android:id="@+id/txt_nome_beneficio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Benefício"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/saira" />

        <!-- Saiba mais -->
        <TextView
            android:id="@+id/txt_sabia_mais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clique e saiba mais"
            android:textColor="@color/principal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/saira" />

        <!-- Indicação de elegibilidade -->
        <TextView
            android:id="@+id/txt_is_elegivel"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu perfil se encaixa nesse benefício!"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:fontFamily="@font/saira" />
    </LinearLayout>

</LinearLayout>

